public class dz {
    public class Main {
        // задание 1
        public static void main(String[] args) {
            // Объявляем переменные разных типов
            int integerValue = 12345;
            byte byteValue = 100;
            short shortValue = 32767;
            long longValue = 9876543210L;
            float floatValue = 3.14159f;
            double doubleValue = 3.141592653589793;

            // Выводим значения переменных в консоль
            System.out.println("Значение переменной " + "integerValue" + " с типом " + "int" + " равно " + integerValue);
            System.out.println("Значение переменной " + "byteValue" + " с типом " + "byte" + " равно " + byteValue);
            System.out.println("Значение переменной " + "shortValue" + " с типом " + "short" + " равно " + shortValue);
            System.out.println("Значение переменной " + "longValue" + " с типом " + "long" + " равно " + longValue);
            System.out.println("Значение переменной " + "floatValue" + " с типом " + "float" + " равно " + floatValue);
            System.out.println("Значение переменной " + "doubleValue" + " с типом " + "double" + " равно " + doubleValue);
        }
        // задание 2
        public class BreakfastWeightCalculator {
            public static void main(String[] args) {
                // Рассчитываем вес каждого ингредиента по формуле: количество * вес одной единицы
                int bananasWeight = 5 * 80;      // 5 бананов по 80 г = 400 г
                int milkWeight = 2 * 105;        // 200 мл молока (100 мл = 105 г) = 210 г
                int iceCreamWeight = 2 * 100;    // 2 брикета мороженого по 100 г = 200 г
                int eggsWeight = 4 * 70;         // 4 яйца по 70 г = 280 г

                // Суммируем вес всех ингредиентов, чтобы получить общий вес завтрака в граммах
                int totalWeightG = bananasWeight + milkWeight + iceCreamWeight + eggsWeight;

                // Переводим граммы в килограммы (делим на 1000)
                double totalWeightKg = (double) totalWeightG / 1000;

                // Выводим результаты в консоль
                System.out.println("Значение в граммах: " + totalWeightG + " г");
                System.out.println("Значение в килограммах: " + totalWeightKg + " кг");
            }
        }
        // задание 3
        public class SalaryIncrease {
            public static void main(String[] args) {
                // Исходные данные
                double mashaSalary = 67760;
                double denisSalary = 83690;
                double kristinaSalary = 76230;

                // Процент повышения
                double increasePercent = 1.10; // 10%

                // Расчёт для Маши
                double newMashaSalary = mashaSalary * increasePercent;
                double mashaYearDiff = (newMashaSalary - mashaSalary) * 12;

                // Расчёт для Дениса
                double newDenisSalary = denisSalary * increasePercent;
                double denisYearDiff = (newDenisSalary - denisSalary) * 12;

                // Расчёт для Кристины
                double newKristinaSalary = kristinaSalary * increasePercent;
                double kristinaYearDiff = (newKristinaSalary - kristinaSalary) * 12;

                // Вывод результатов
                System.out.println("Маша теперь получает " +
                        Math.round(newMashaSalary) +
                        " рублей. Годовой доход вырос на " +
                        Math.round(mashaYearDiff) + " рублей");

                System.out.println("Денис теперь получает " +
                        Math.round(newDenisSalary) +
                        " рублей. Годовой доход вырос на " +
                        Math.round(denisYearDiff) + " рублей");

                System.out.println("Кристина теперь получает " +
                        Math.round(newKristinaSalary) +
                        " рублей. Годовой доход вырос на " +
                        Math.round(kristinaYearDiff) + " рублей");
            }
        }

    }
}
